@using Syncfusion.Blazor.Cards

<SfCard style="width:50%;
               border-color: darkgray;
               margin:5px auto">
    <CardHeader Title="@Title"
                SubTitle="@SubTitle" />

    <CardContent EnableSeparator=true>
        @Content
    </CardContent>

    <CardFooter>
        <CardFooterContent>
            @Footer
        </CardFooterContent>
    </CardFooter>
</SfCard>